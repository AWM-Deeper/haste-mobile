# HASTE Mobile App Environment Configuration
# Copy this file to .env.local and update with your values

# Medusa Backend API
# URL of the Medusa backend server
EXPO_PUBLIC_API_URL=https://stingray-app-yitsm.ondigitalocean.app

# Medusa Store Token (optional)
# Store token for public API endpoints
EXPO_PUBLIC_STORE_TOKEN=your_store_token_here

# Shopify Integration
# Shopify store configuration for multi-store sync
EXPO_PUBLIC_SHOPIFY_STOREFRONT_TOKEN=your_shopify_token_here
EXPO_PUBLIC_SHOPIFY_STORE_URL=your_shopify_store_url

# Analytics
# Enable/disable analytics and crash reporting
EXPO_PUBLIC_ANALYTICS_ENABLED=true

# Feature Flags
# Toggle experimental features
EXPO_PUBLIC_ENABLE_DEBUG_MODE=false
EXPO_PUBLIC_ENABLE_PERFORMANCE_METRICS=true

# Application
# App configuration
EXPO_PUBLIC_APP_NAME=HASTE
EXPO_PUBLIC_APP_VERSION=1.0.0

# Notes:
# - Never commit .env.local file to version control
# - Keep sensitive tokens and API keys secure
# - For development, use .env.example as template
# - For production, use secure secrets management
